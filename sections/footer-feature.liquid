{{  'footer-feature.css' | asset_url | stylesheet_tag }}
<div class="footer_feature_wrapper">
    
    {% for block in section.blocks %}
        <div class="footer_feature_main">

            {% if block.settings.image_logo != blank %}
                <div class="footer_feature_logo">
                    {% assign image = block.settings.image_logo %}
                    {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
                    {% render 'responsive-image', image: image, sizes: master_width, retina: 1 %}
                </div>
            {% endif %}

            {% if block.settings.title %}
                <div class="footer_feature_block_menu">
                    <div class="footer_feature_title h11 lh-sm">{{ block.settings.title }}</div>
                    <div class="footer_feature_text_wrapper h16 lh-sm">
                        {% if block.settings.text_left %}
                            <div class="footer_feature_text_left">{{ block.settings.text_left }}</div>
                        {% endif %}

                        {% if block.settings.text_right %}
                            <div class="footer_feature_text_right">{{ block.settings.text_right }}</div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <div class="footer_feature_socials">
                {% if block.settings.button_link %}
                    <div class="footer_feature_image_socials">
                        <a href="{{ block.settings.button_link }}"></a>
                    </div>
                {% endif %}
            </div>

        </div>
    {% endfor %}

    {% if section.settings.text %}
        <div class="footer_feature_footer h18 lh-l">{{ section.settings.text }}</div>
    {% endif %}

</div>
{% schema %}
    {
        "name": "Footer Feature",
        "settings": [
            {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<p>Text text text. Text text text text.</p>"
            }
        ],
        "blocks": [
            {
            "type": "text",
            "name": "Text",
            "settings": [
                    {
                        "type": "image_picker",
                        "id": "image_logo",
                        "label": "Image Logo"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Block Title",
                        "default": "Block Title"
                    },
                    {
                        "type": "richtext",
                        "id": "text_left",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    },
                    {
                        "type": "richtext",
                        "id": "text_right",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button link"
                    }
                ]
            }
		],
        "presets": [
          {
            "name": "Footer Feature"
          }
        ]
    }
{% endschema %}  