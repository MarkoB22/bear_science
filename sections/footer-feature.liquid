{{  'footer-feature.css' | asset_url | stylesheet_tag }}
<div class="footer_feature_wrapper">
    
    {% for block in section.blocks %}
        <div class="footer_feature_main">

            {% if block.settings.image_logo != blank %}
                <div class="footer_feature_logo">
                    {% assign image = block.settings.image_logo %}
                    {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
                    {% render 'responsive-image', image: image, sizes: master_width, retina: 1 %}
                </div>
            {% endif %}

            {% if block.settings.title %}
                <div class="footer_feature_site_menu">
                    <div class="footer_feature_title">{{ block.settings.title }}</div>
                    <div class="footer_feature_text_wrapper">

                    {% if block.settings.text_left %}
                        <div class="footer_feature_text_left">{{ block.settings.text_left }}</div>
                    {% endif %}

                    {% if block.settings.text_right %}
                        <div class="footer_feature_text_right">{{ block.settings.text_right }}</div>
                    {% endif %}
                    </div>
                </div>
            {% endif %}

            <div class="footer_feature_socials">
                {% if block.settings.socials_title %}
                    <div class="footer_feature_title">{{ block.settings.socials_title }}</div>
                {% endif %}
                {% if block.settings.image_socials != blank %}
    
                    <div class="footer_feature_image_socials">
                        {% assign image = block.settings.image_socials %}
                        {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
                        {% render 'responsive-image', image: image, sizes: master_width, retina: 1 %}
                    </div>
                {% endif %}
            </div>

        </div>
    {% endfor %}

    <div class="footer_feature_footer">
        <div class="footer_feature_footer_text">{{ section.settings.text }}</div>
    </div>

</div>
{% schema %}
    {
        "name": "Footer Feature",
        "settings": [
            {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<p>Text text text. Text text text text.</p>"
            }
        ],
        "blocks": [
            {
            "type": "text",
            "name": "Text",
            "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "text",
                        "id": "socials_title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_logo",
                        "label": "Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_socials",
                        "label": "Image"
                    },
                    {
                        "type": "richtext",
                        "id": "text_left",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    },
                    {
                        "type": "richtext",
                        "id": "text_right",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    }
                ]
            }
		],
        "presets": [
          {
            "name": "Footer Feature"
          }
        ]
    }
{% endschema %}  