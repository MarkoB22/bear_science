{{  'footer-feature.css' | asset_url | stylesheet_tag }}
<div class="footer_feature_wrapper">
    
    {% for block in section.blocks %}
        <div class="footer_feature_main">

            {% if block.settings.image != blank %}
                <div class="footer_feature_logo">
                    {% assign image = block.settings.image %}
                    {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
                    {% render 'responsive-image', image: image, sizes: master_width, retina: 1 %}
                </div>
            {% endif %}

            {% if block.settings.title %}
                <div class="footer_feature_site_menu">
                    <div class="footer_feature_title">{{ block.settings.title }}</div>
                    <div class="footer_feature_text">{{ block.settings.text }}</div>
                </div>
            {% endif %}

            {% if block.settings.title %}
                <div class="footer_feature_contact">
                    <div class="footer_feature_title">{{ block.settings.title }}</div>
                    <div class="footer_feature_text">{{ block.settings.text }}</div>
                </div>
            {% endif %}

            {% if block.settings.image != blank %}
                {% if block.settings.title %}
                    <div class="footer_feature_title">{{ block.settings.title }}</div>
                {% endif %}

                <div class="footer_feature_socials">
                    {% assign image = block.settings.image %}
                    {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
                    {% render 'responsive-image', image: image, sizes: master_width, retina: 1 %}
                </div>
            {% endif %}

        </div>
    {% endfor %}

    <div class="footer_feature_footer">
        <div class="footer_feature_footer_text">{{ section.settings.text }}</div>
    </div>

</div>
{% schema %}
    {
        "name": "Footer Feature",
        "settings": [
            {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<p>Text text text. Text text text text.</p>"
            }
        ],
        "blocks": [
            {
            "type": "text",
            "name": "Text",
            "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    }
                ]
            }
		],
        "presets": [
          {
            "name": "Footer Feature"
          }
        ]
    }
{% endschema %}  