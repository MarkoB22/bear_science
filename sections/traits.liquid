{{ 'traits.css' | asset_url | stylesheet_tag }}
<div class="traits-section_wrapper ">
{% for block in section.blocks %}
<div class="traits-block_wrapper">
    {% if block.settings.title %}
        <div class="traits-title h10 lh-sm f_regular">
            {{ block.settings.title }}
        </div>
    {% endif %}

    {%- if block.settings.image != blank -%}
        <div class="traits-image">
            {% assign image = block.settings.image %}
            {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
            {%- render 'responsive-image', image: image, sizes: master_width, retina: 1 -%}
        </div>
    {%- endif -%}

    <div class="traits-text h15 lh-m f_light">
        {{ block.settings.text }}

    </div>

</div>
{% endfor %}
</div>
{% schema %}
    {
        "name": "Traits",
        "settings": [
        ],
        "blocks": [
            {
            "type": "text",
            "name": "Text",
            "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    }
                ]
            }
		],
        "presets": [
          {
            "name": "Traits"
          }
        ]
    }
    {% endschema %}    