{{  'you-may-also-like.css' | asset_url | stylesheet_tag }}

<div class="you_may_also_like_title h9 lh-sm f_medium">
    {{ section.settings.title }}
</div>

<div class="you_may_also_like_wrapper">
    <slide-show class="you_may_also_like_product carousel">

        {% for block in section.blocks %}
            <div class="you_may_also_like_product carousel__slide">
                {% if block.settings.product != blank %}
                    {%- render 'product-card', product_card_product: block.settings.product -%}
                {% endif %}
            </div>
        {% endfor %}

        {%- render 'slideshow-arrows' -%}

    </slide-show>
</div>

{% schema %}
{
    "name": "You may also like",
    "max_blocks": 3,
    "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Title"
                }
            ],
        "blocks": [
        {
        "type": "product",
        "name": "Product",
        "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Pick a product"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "You may also like"
        }
    ]
}
{% endschema %}   