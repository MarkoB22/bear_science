{{  'blog-title.css' | asset_url | stylesheet_tag }}
<div class="blog_title_wrapper">

    {% if section.settings.title %}
        <div class="blog_title_title">
            {{ section.settings.title }}
        </div>
    {% endif %}

    {% if section.settings.text %}
        <div class="blog_title_text">
            {{ section.settings.text }}
        </div>
    {% endif %}

</div>
{% schema %}
    {
        "name": "Blog Title",
        "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text",
                        "default": "<p>Text text text. Text text text text.</p>"
                    }
                ],
        "presets": [
          {
            "name": "Blog Title"
          }
        ]
    }
{% endschema %}   