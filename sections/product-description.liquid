{{ 'product-description.css' | asset_url | stylesheet_tag }}
<div class="product_description_wrapper">

    {% if section.settings.title %}
    <div class="product_description_title">
        <div class="product_description_main_title">

        </div>

        <div class="product_description_subtitle">

        </div>
    </div>
    {% endif %}

    
    <div class="product_description_img">

    </div>

    <div class="product_description_btn">

    </div>

</div>
{% schema %}
{
    "name": "Product Description",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
        },
        {
        "type": "image_picker",
        "id": "custom_image",
        "label": "Upload an image"
        }
    ],
    "presets": [
    {
        "name": "Custom Image",
        "category": "Image"
    }
    ]

}
{% endschema %}  