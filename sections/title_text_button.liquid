{{- 'title_text_button.css' | asset_url | stylesheet_tag -}}
<div class="title_text_button-wrapper title_position-{{ section.settings.title_position }}">

    {% if section.settings.title %}
    <div class="title_text_button-title-wrapper title_position-{{ section.settings.title_position }} h1 lh-l">
        <div class="title_text_button-title">
            {{ section.settings.title }}
        </div>
        <div class="vl"></div>
    </div>
    {% endif %}


    {% if section.settings.text or section.settings.button_text %}
        <div class="title_text_button-button_text_wrapper h11 lh-l {{ section.settings.text_size_text }}">

            {% if section.settings.text %}
            <div class="title_text_button-text">
                {{ section.settings.text }}
            </div>
            {% endif %}
            
            {% if section.settings.title_position == "left" %}
                {% if section.settings.button_text_arrow %}
                    <div class="title_text_button-button button_type3 h10 lh-sm f_regular">
                        <a href="{{ section.settings.button_link }}">
                            <span>{{ section.settings.button_text_arrow }}</span>
                        </a>
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17.6895 11.25H3.75C3.55109 11.25 3.36032 11.329 3.21967 11.4696C3.07902 11.6103 3 11.8011 3 12C3 12.1989 3.07902 12.3896 3.21967 12.5303C3.36032 12.671 3.55109 12.75 3.75 12.75H17.6895L12.219 18.219C12.0782 18.3598 11.9991 18.5508 11.9991 18.75C11.9991 18.9491 12.0782 19.1401 12.219 19.281C12.3598 19.4218 12.5508 19.5009 12.75 19.5009C12.9492 19.5009 13.1402 19.4218 13.281 19.281L20.031 12.531C20.1008 12.4613 20.1563 12.3785 20.1941 12.2874C20.2319 12.1963 20.2513 12.0986 20.2513 12C20.2513 11.9013 20.2319 11.8036 20.1941 11.7125C20.1563 11.6214 20.1008 11.5386 20.031 11.469L13.281 4.71897C13.1402 4.57814 12.9492 4.49902 12.75 4.49902C12.5508 4.49902 12.3598 4.57814 12.219 4.71897C12.0782 4.8598 11.9991 5.05081 11.9991 5.24997C11.9991 5.44913 12.0782 5.64014 12.219 5.78097L17.6895 11.25Z" fill="#040404"/>
                        </svg> 
                    </div>
                {% endif %}
            {% endif %}
        </div>
        
    {% endif %}



</div>
{% schema %}
{
    "name": "Title, text and button",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
        },
        {
			"type": "select",
			"id": "title_position",
			"options": [
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "right",
					"label": "Right"
				}
			],
			"default": "left",
			"label": "Title position"
		},
        {
			"type": "select",
			"id": "text_size_text",
			"options": [
				{
					"value": "h7",
					"label": "Medium"
				},
                {
					"value": "h2",
					"label": "Large"
				}
			],
			"default": "h7",
			"label": "Text size"
		},
        {
            "type": "richtext",
            "id": "text",
            "label": "Text content 1",
            "default": "<p>Text text text. Text text text text.</p>"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "text",
            "id": "button_text_arrow",
            "label": "Button text",
            "default": "Button text"
        }
    ],
    "presets": [
      {
        "name": "Title, text and button"
      }
    ]
}
{% endschema %}    