{{ 'product-presentation.css' | asset_url | stylesheet_tag }}
<div class="product_description_wrapper">

    <div class="product_description_title">
        {% if section.settings.title %}
        <div class="product_description_main_title h3 lh-sm">
            {{ section.settings.title }}
            </div>
        {% endif %}

        {% if section.settings.subtitle %}
        <div class="product_description_subtitle h13 lh-sm">
            {{ section.settings.subtitle }}
        </div>
        {% endif %}
    </div>

    {%- if section.settings.image != blank -%}
        <div class="product_description_image">
            {% assign image = section.settings.image %}
            {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
            {%- render 'responsive-image', image: image, sizes: master_width, retina: 1 -%}
        </div>
    {%- endif -%}


    <div class="product_description_btn button_type1 svg path">  DODATI STRELICU NA BUTTON U DESKTOPU
        See All Products
    </div>

</div>
{% schema %}
{
    "name": "Product Presentation",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Subtitle"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],    
    "presets": [
          {
            "name": "Product Presentation"
          }
        ]
}
{% endschema %}  